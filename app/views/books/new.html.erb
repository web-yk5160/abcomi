<%= form_with(model: @book, local: true) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <%= current_user.id %>
    <div class="field">
        <%= f.text_field :name, placeholder: "書籍名" %>
    </div>

    <div class="field">
        <%= f.file_field :image %>
    </div>

    <div class="field">
        <%= f.number_field :price, placeholder: "値段" %>
    </div>

    <div class="field">
        <%= f.text_field :author, placeholder: "著者" %>
    </div>

    <div class="field">
        <%= f.text_field :category, placeholder: "カテゴリー" %>
    </div>

    <div class="field">
        <%= f.text_area :content, placeholder: "書籍内容" %>
    </div>

    <div class="field">
        <%= f.date_field :published_at, placeholder: "出版日" %>
    </div>
    
    <div class="field">
        <%= f.text_field :published_by, placeholder: "出版社" %>
    </div>
        <%= f.submit "作成", class: "btn btn-primary" %>
<% end %>
