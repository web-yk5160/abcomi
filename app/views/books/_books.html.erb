<h3>投稿一覧</h3>
<table class="table table-bordered border-primary table-hover table-sm">
  <thead class="thead-dark">
    <tr>
      <th scope="col">書籍名</th>
      <th scope="col">値段</th>
      <th scope="col">著者</th>
      <th scope="col">カテゴリー</th>
      <th scope="col">書籍内容</th>
      <th scope="col">出版日</th>
      <th scope="col">出版社</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
            <tr>
                <td><%= link_to book.name, book_path(book.id) %></td>
                <td><%= book.price %></td>
                <td><%= book.author %></td>
                <td><%= book.category %></td>
                <td><%= book.content %></td>
                <td><%= book.published_at.strftime('%Y/%m/%d') %></td>
                <td><%= book.published_by %></td>
            </tr>
        <% end %>
  </tbody>
</table>
