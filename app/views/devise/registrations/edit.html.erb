<div class="sessions-wrapper">

<h2>ユーザー編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="sessions-field">
    <%= f.label :username, class: "sessions-label" %><br />
    <%= f.text_field :username, class: "sessions-label-input" %>
  </div>

  <div class="sessions-field">
    <%= f.label :email, class: "sessions-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "sessions-label-input" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="sessions-field">
    <%= f.label :password, class: "sessions-label" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "sessions-label-input" %>
  </div>

  <div class="sessions-field">
    <%= f.label :password_confirmation, class: "sessions-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "sessions-label-input" %>
  </div>

  <% if false %>
    <div class="sessions-field">
      <%= f.label :current_password, class: "sessions-label" %><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "sessions-label-input" %>
    </div>
  <% end %>

  <%= f.fields_for :study_abroad_expectations do |f| %>
    <div class="sessions-field">
      <%= f.label :expected_country, class: "sessions-label" %><br />
      <%= f.text_field :expected_country, class: "sessions-label-input" %>
    </div>

    <div class="sessions-field">
      <%= f.label :expected_state, class: "sessions-label" %>
      <%= f.text_field :expected_state, class: "sessions-label-input" %>
    </div>
  <% end %>

  <%= f.fields_for :study_abroad_targets do |f| %>
    <div class="sessions-field">
      <%= f.label :target_country, class: "sessions-label" %>
      <%= f.text_field :target_country, class: "sessions-label-input" %>
    </div>

    <div class="sessions-field">
      <%= f.label :target_state, class: "sessions-label" %>
      <%= f.text_field :target_state, class: "sessions-label-input" %>
    </div>
  <% end %>

  <div class="sessions-field">
    <%= f.label :image, class: "sessions-label" %>
    <%= f.file_field :image, class: "sessions-label-input" %>
  </div>

  <div class="actions">
    <%= f.submit "編集する", class: "submit-btn" %>
  </div>
<% end %>

</div>
